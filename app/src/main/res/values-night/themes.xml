<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiStoryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_variant_night</item>
        <item name="colorOnPrimary">@color/on_primary_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_night</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_night</item>
        <item name="colorOnSecondary">@color/on_secondary_night</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>